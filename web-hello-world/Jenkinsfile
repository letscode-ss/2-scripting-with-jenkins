def node_name = "agent"
pipeline {
    agent { label node_name }
    stages {
        stage("gradle build") { 
            steps {
                script { 
                    sh "cd web-hello-world && gradle build"
                }
            }
        }
        stage("Generating 100 MB") { 
            steps {
                script { 
                    sh "dd if=/dev/zero of=testfile bs=1024 count=102400"
                }
            }
        }
    }
    post {
        cleanup{
            script {
                load 'web-hello-world/cleanup-workspaces.groovy'
            }
        }
    }
}

